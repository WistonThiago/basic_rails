<h1>Accessing hash data</h1>
<table class="table">
    <tr>
        <td>Name</td>
        <td>Visible?</td>
        <td>Logged In?</td>
        <td>Country Code</td>
        <td>Work Experience</td>
        <td>State Code</td>
    </tr>
    <tr>
        <td> <%= @data[:name] %></td>
        <td> <%= @data[:isVisible] %></td>
        <td> <%= @data[:loggedIn] %></td>
        <td> <%= @data[:countryCode] %></td>
        <td> <%= @data[:workExperience] %></td>
        <td> <%= @data[:stateCode] %></td>
    </tr>
</table>

<% if @data[:loggedIn] %>
    <h1> Hi, <%= @data[:name] %>, you're logged in.</h1>
<% else %>
    <h1> Hi, <%= @data[:name] %>, you're just a guest, please log in.</h1>
<% end %>