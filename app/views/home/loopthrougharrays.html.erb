<h1>Showing the products</h1>

<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Name</td>
            <td>Quantity</td>
            <td>Stock</td>
            <td>Cost</td>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= product[:id] %></td>
            <td><%= product[:name] %></td>
            <td><%= product[:quantity] %></td>
            <td><%= product[:stock] %></td>
            <td><%= product[:cost] %></td>
        <% end %>
        </tr>
    </tbody>
</table>